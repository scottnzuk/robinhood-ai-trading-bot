{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run Hybrid AI Trading Bot",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/src/ai_trading_framework/main_loop.py",
      "console": "integratedTerminal",
      "justMyCode": false,
      "env": {
        "PYTHONPATH": "${workspaceFolder}/src"
      }
    },
    {
      "name": "Debug Unit Tests",
      "type": "debugpy",
      "request": "launch",
      "module": "pytest",
      "args": [
        "tests/"
      ],
      "console": "integratedTerminal",
      "justMyCode": false
    }
  ]
}
